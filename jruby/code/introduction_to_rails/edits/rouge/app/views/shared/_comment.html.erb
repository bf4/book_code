<%= form_for(@comment, :url => { :action => "comment_on_#{target}",
                       :id => params[:id] } ) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %>
          prohibited this comment from being saved:</h2>

      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <b>By</b><br />
    <%= f.text_field :said_by %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Comment" %>
  </p>
<% end %>
